# =============================================================================
# Production-Grade Monitoring Stack Environment Variables
# =============================================================================

# -----------------------------------------------------------------------------
# Port Configuration
# -----------------------------------------------------------------------------
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
LOKI_PORT=3100
ALERTMANAGER_PORT=9093
BLACKBOX_PORT=9115
NODE_EXPORTER_PORT=9100
CADVISOR_PORT=8081
PROMTAIL_PORT=9080

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------
# Central monitoring server IP (where this stack runs)
CENTRAL_SERVER_IP=172.16.130.44

# Remote servers to monitor
REMOTE_SERVER_1_IP=172.16.130.49
REMOTE_SERVER_2_IP=172.16.130.50

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------
# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=secure_password_here

# Prometheus (if using basic auth)
PROMETHEUS_USER=prometheus
PROMETHEUS_PASSWORD=prometheus_secure_password

# Loki (if using basic auth)
LOKI_USER=loki
LOKI_PASSWORD=loki_secure_password

# -----------------------------------------------------------------------------
# Jenkins Configuration
# -----------------------------------------------------------------------------
JENKINS_URL=jenkins:8080
JENKINS_USER=prometheus
JENKINS_PASSWORD=gV3:l}4/50_rsE|4Mv$9

# -----------------------------------------------------------------------------
# External Monitoring Targets (Blackbox)
# -----------------------------------------------------------------------------
TARGET_URL_1=https://firstTargetURL
TARGET_URL_2=https://SecnfTargetURL
TARGET_URL_3=https://ThirdTargetURL

# -----------------------------------------------------------------------------
# Slack Notifications (Alertmanager)
# -----------------------------------------------------------------------------
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#alerts

# -----------------------------------------------------------------------------
# AWS S3 Configuration (Loki Storage)
# -----------------------------------------------------------------------------
AWS_S3_BUCKET_NAME=your-loki-logs-bucket
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# -----------------------------------------------------------------------------
# Log Paths (Promtail)
# -----------------------------------------------------------------------------
# Host system logs
HOST_LOG_PATH=/var/log

# Application logs
API_1_LOG_PATH=/var/www/API_1/logs
API_2_LOG_PATH=/var/www/API_2/Logs

# -----------------------------------------------------------------------------
# Container Resource Limits
# -----------------------------------------------------------------------------
PROMETHEUS_MEMORY_LIMIT=2G
GRAFANA_MEMORY_LIMIT=1G
LOKI_MEMORY_LIMIT=2G
ALERTMANAGER_MEMORY_LIMIT=512M
CADVISOR_MEMORY_LIMIT=512M
NODE_EXPORTER_MEMORY_LIMIT=256M
BLACKBOX_MEMORY_LIMIT=256M

# -----------------------------------------------------------------------------
# Retention & Storage
# -----------------------------------------------------------------------------
PROMETHEUS_RETENTION_DAYS=15
LOKI_RETENTION_HOURS=168
GRAFANA_BACKUP_RETENTION_DAYS=30

# -----------------------------------------------------------------------------
# Monitoring Configuration
# -----------------------------------------------------------------------------
SCRAPE_INTERVAL=15s
EVALUATION_INTERVAL=15s

# -----------------------------------------------------------------------------
# Environment Labels
# -----------------------------------------------------------------------------
ENVIRONMENT=production
INSTANCE_NAME=monitoring-stack-1
